<Window x:Class="PracticeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticeApp"
        mc:Ignorable="d"
        Title="Movie Diary App" Height="600" Width="900">

    <Grid Margin="10">
        <TabControl>
            <!-- DISCOVER -->
            <TabItem Header="Discover">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="91*"/>
                        <ColumnDefinition Width="759*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.ColumnSpan="2">
                        <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Width="260" Height="30" Margin="0,0,10,0"
                                 VerticalContentAlignment="Center"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                        <Button Content="Search" Width="90" Height="30" Margin="0,0,10,0"
                                Click="SearchButton_Click"/>
                        <Button Content="Trending" Width="90" Height="30"
                                Click="TrendingButton_Click"/>
                    </StackPanel>

                    <ListView Grid.Row="1" ItemsSource="{Binding Movies}" Grid.ColumnSpan="2">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="1" BorderBrush="Gray" Padding="6" Margin="4">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Width="60" Height="90" Margin="0,0,10,0"
                                               Source="{Binding PosterUrl}"/>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding ReleaseDate}" />
                                            <TextBlock Text="{Binding Rating}" />
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabItem>

            <!-- WATCHLIST -->
            <TabItem Header="Watchlist">
                <Grid Margin="10">
                    <TextBlock Text="Watchlist" FontSize="18" />
                </Grid>
            </TabItem>

            <!-- DIARY  -->
            <TabItem Header="Diary">
                <Grid Margin="10">
                    <TextBlock Text="Diary" FontSize="18" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
